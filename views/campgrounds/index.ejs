<% include ../partials/header.ejs %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is the campgrounds site</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <a href="/campgrounds/new" class="btn btn-primary">Add new Campground</a>
        </div>
    </header>
    
    <h4>Let's see the best camping spots on the world</h4>
    
    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
            <div class="camps-container col-lg-4 col-md-6">
                <img src="<%= campground.image %>" alt="<%= campground.name %>">
                <p><%= campground.name %></p>
                <a href="campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
            </div>
        <% }); %>
    </div>

</div>



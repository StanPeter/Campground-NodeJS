<% include ../partials/header.ejs %>



<div class="custom-form">
    
    <h1>Create a New Campground</h1>
    
        <form action="/campgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="put a name" name="campName" required>
            </div>
            <div class="form-group">
                <input type="file" id="campImage" id="campImage" name="campImage" accept="image/*" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="Expected Price" name="campPrice" min="0.1" step="0.1"
                    required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="location" id="location"
                    placeholder="Yosemite National Park, CA" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="campDesc" id="" cols="30" rows="3"
                    placeholder="Add some desscription"></textarea>
            </div>
            <div class="form-group">
                <button class=" btn btn-lg btn-block btn-primary" type="submit">Submit</button>
            </div>
        </form>

        <hr class="custom-form-hr"><br>
        <a href="/campgrounds">Go Back</a>

</div>



<% include ../partials/header-forms %>
<!-- using header-forms.ejs / forms.css -->



<div class="custom-form">

    <h1 class="text-center">Edit comment</h1>
    <div class="form-new-camp">

        <form class="my-3" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" name="comment[text]" cols="30"
                    rows="3"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary" type="submit">Submit</button>
            </div>
        </form>

        <hr class="custom-form-hr"><br>
        <a href="/campgrounds/<%= campground_id %>/">Go back</a>
    </div>

</div>




